###############################################################################
# CONFIGURAZIONE APPLICAZIONE
###############################################################################

APP_NAME="Luca Macedone Portfolio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Rome

APP_LOCALE=it
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=it_IT

# Maintenance mode
APP_MAINTENANCE_DRIVER=file

# PHP Settings
PHP_CLI_SERVER_WORKERS=4

# Bcrypt Hashing Rounds (12 per production, 4 per testing)
BCRYPT_ROUNDS=12

###############################################################################
# LOGGING
###############################################################################

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# In production usa 'daily' per rotazione log
# In development usa 'single' o 'stack'

###############################################################################
# DATABASE
###############################################################################

# Per sviluppo locale: SQLite
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# Per produzione (Hostinger): MySQL
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=u123456789_portfolio
# DB_USERNAME=u123456789_user
# DB_PASSWORD=secure_password

###############################################################################
# SESSION & CACHE
###############################################################################

# Driver sessione (file, cookie, database, redis)
# Raccomandato: database per production
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache driver (file, redis, memcached, database)
CACHE_DRIVER=file
CACHE_PREFIX=

# Redis Cache (opzionale, per performance)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_CLIENT=phpredis

###############################################################################
# BROADCASTING & QUEUE
###############################################################################

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Memcached (opzionale)
# MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211

###############################################################################
# EMAIL CONFIGURATION (Hostinger SMTP)
###############################################################################

MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_ENCRYPTION=ssl
MAIL_USERNAME=info@lucamacedone.com
MAIL_PASSWORD="your-email-password"
MAIL_FROM_ADDRESS=info@lucamacedone.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Port 587 with TLS
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls

###############################################################################
# CONTACT FORM SETTINGS
###############################################################################

CONTACT_ADMIN_EMAIL=info@lucamacedone.com
CONTACT_SEND_NOTIFICATION=true
CONTACT_AUTO_REPLY=true

# Rate Limiting per form contatti
CONTACT_RATE_LIMIT_ATTEMPTS=3
CONTACT_RATE_LIMIT_DECAY_MINUTES=10

###############################################################################
# IMAGE OPTIMIZATION
###############################################################################

IMAGE_MAX_SIZE=2048
IMAGE_QUALITY=85
THUMBNAIL_WIDTH=400
THUMBNAIL_HEIGHT=300

###############################################################################
# CACHE SETTINGS
###############################################################################

PROJECTS_CACHE_TTL=3600
PROJECTS_CACHE_ENABLED=true

###############################################################################
# VITE ASSETS
###############################################################################

VITE_APP_NAME="${APP_NAME}"

# In production, Vite assets saranno serviti da public/build
# In development, saranno serviti da Vite dev server

###############################################################################
# SECURITY & PERFORMANCE
###############################################################################

# Force HTTPS in production (impostare su true)
FORCE_HTTPS=false

# Trusted Proxies (per Cloudflare, Hostinger reverse proxy)
# TRUSTED_PROXIES=*

# Security Headers
SECURITY_HEADERS_ENABLED=true

###############################################################################
# TELESCOPE (Debug Tool - Solo Development)
###############################################################################

TELESCOPE_ENABLED=false
TELESCOPE_DOMAIN=
TELESCOPE_PATH=telescope

###############################################################################
# STORAGE & FILESYSTEM
###############################################################################

# AWS S3 (opzionale, per storage cloud)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=eu-west-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

###############################################################################
# EXTERNAL SERVICES
###############################################################################

# Google Analytics (opzionale)
# GOOGLE_ANALYTICS_ID=

# Google reCAPTCHA (opzionale)
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# Social Media Links
SOCIAL_GITHUB=https://github.com/yourusername
SOCIAL_LINKEDIN=https://linkedin.com/in/yourprofile
SOCIAL_TWITTER=
SOCIAL_INSTAGRAM=

###############################################################################
# PUSHER (per WebSocket - opzionale)
###############################################################################

